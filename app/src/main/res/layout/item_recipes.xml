<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipeCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recipeImg"
            android:layout_width="@dimen/recipe_image_width"
            android:layout_height="@dimen/recipe_image_height"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            tools:src="@drawable/nutellapie" />

        <TextView
            android:id="@+id/recipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/recipe_small_margin"
            android:layout_marginLeft="@dimen/recipe_large_margin"
            android:layout_marginRight="@dimen/recipe_small_margin"
            android:layout_marginStart="@dimen/recipe_large_margin"
            android:layout_marginTop="@dimen/recipe_medium_margin"
            android:layout_toEndOf="@id/recipeImg"
            android:layout_toRightOf="@id/recipeImg"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:text="Nutella Pie" />

        <TextView
            android:id="@+id/recipeServing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipeName"
            android:layout_marginBottom="@dimen/recipe_small_margin"
            android:layout_marginEnd="@dimen/recipe_medium_margin"
            android:layout_marginLeft="@dimen/recipe_large_margin"
            android:layout_marginRight="@dimen/recipe_medium_margin"
            android:layout_marginStart="@dimen/recipe_large_margin"
            android:layout_toEndOf="@id/recipeImg"
            android:layout_toRightOf="@id/recipeImg"
            android:drawableLeft="@drawable/ic_serving"
            android:drawablePadding="@dimen/ingredients_padding"
            android:drawableStart="@drawable/ic_serving"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="8 servings" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

